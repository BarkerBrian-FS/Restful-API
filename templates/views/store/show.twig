{% extends 'layouts/base.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="/public/app.css">
{% endblock %}

{% block title %}Product Description{% endblock %}
<div>
	{% set defaultImage = variant.Images[0] %}
    <div >
		<img src="/public/images/{{ defaultImage.id }}{{ defaultImage.extension }}" />
        <div>
			{% for image in variant.Images %}
				<a href="#">
					<img src="/public/images/{{ image.id }}{{ image.extension }}" alt="">
			    </a>
			{% endfor %}
				<h4>{{ product.title }} - {{ variant.title }}</h4>
				<p>{{ product.description }}</p>
			<h3>In Stock : <h3>
					<span>
						{% if variant.inventory < 10 %}
							Almost Gone!
						{% elseif variant.inventory == 0 %}
							Not Available
						{% else %}
							Available
						{% endif %}
					</span>
		</div>
    </div>
</div>

{% endblock %}