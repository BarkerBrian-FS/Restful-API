<form method="POST" action="/images/{% if image.id %}{{ image.id }}{% endif %}">
    {% if image.id %}
        <input type="hidden" name="id" value="{{ image.id }}"/>
    {% endif %}
    <div>
        <label for="title">Title: </label>
        <input type="text" name="title" id="title" value="{{ image.title }}"/>
    </div>
    <div>
        <label for="price">Price: </label>
        <input type="number" min="0" step=".01" name="price" id="price"   value="{{ image.price }}"/>
    </div>
     <div>
        <input type="submit"/>
    </div>
</form>